# Application Settings
APP_NAME="GitHub Repo Analyzer"
VERSION="1.0.0"
DEBUG=True
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database Configuration
DATABASE_URL=postgresql://analyzer:analyzer123@localhost:5432/repo_analyzer

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# CORS Settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Repository Cloning Settings
CLONE_DIR=./tmp/repos
MAX_REPO_SIZE_MB=500
CLONE_DEPTH=1
CLONE_TIMEOUT=300
MAX_FILE_SIZE_MB=10

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6335
QDRANT_GRPC_PORT=6334

# Embedding Model Settings
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
EMBEDDING_BATCH_SIZE=32

# Chunking Settings
CHUNK_SIZE=1024
CHUNK_OVERLAP=128

# LLM Model Settings
LLM_MODEL_NAME=TheBloke/Llama-2-7B-Chat-GGUF
LLM_MODEL_FILE=llama-2-7b-chat.Q4_K_M.gguf
LLM_MODEL_PATH=./models

LLM_CONTEXT_LENGTH=8192
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.3
LLM_TOP_P=0.9
LLM_N_GPU_LAYERS=0
LLM_N_THREADS=4

# RAG Settings
RAG_TOP_K=20
RAG_SCORE_THRESHOLD=0.7

# Job Processing
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT=1800

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# Logging
LOG_LEVEL=INFO