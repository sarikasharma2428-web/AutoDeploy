{
  "dashboard": {
    "title": "RepoAnalyzer Application Dashboard",
    "tags": ["application", "repo-analyzer"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "HTTP Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{path}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "HTTP Request Duration (95th percentile)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{method}} {{path}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m])",
            "legendFormat": "{{status}}"
          }
        ]
      },
      {
        "id": 4,
        "title": "Active Jobs",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(analysis_jobs_active)"
          }
        ]
      },
      {
        "id": 5,
        "title": "Job Queue Length",
        "type": "graph",
        "targets": [
          {
            "expr": "redis_list_length{list=\"job_queue\"}"
          }
        ]
      },
      {
        "id": 6,
        "title": "LLM Inference Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(llm_inference_duration_seconds_sum[5m]) / rate(llm_inference_duration_seconds_count[5m])"
          }
        ]
      }
    ]
  }
}
